@model IEnumerable<Rocoland.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>
>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus)
        </td>
        <td>
            @Html.ActionLink("Confirm", "Confirm", new { id=item.Id }) |
            @Html.ActionLink("Cancel", "Cancel", new { id=item.Id })
        </td>
    </tr>
}

</table>
